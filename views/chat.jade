//extends layout
doctype html
html
  head
    meta(charset="UTF-8")
    title.Socket.IO= "Chat Example"
    link(rel="stylesheet" href="/stylesheets/style.css")

  body
    ul.pages
      li.chat.page
        div.chatArea
          ul.messages
        input.inputMessage(placeholder="Type here...")
      li.login.page
        div.form
          h3.title What's your nickname?
          input.usernameInput(type="text" maxlength="14")
          button(onclick='setUsername()') Click
  script(src="https://code.jquery.com/jquery-1.10.2.min.js")
  script(src="/scripts/socket.io.js")
  script(src="/scripts/mainChat.js").